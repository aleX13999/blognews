{% extends 'base.html.twig' %}

{% block title %}Все новости{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="posts">
    {% for post in posts %}

        <div class="row g-0 border rounded flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="col p-4 d-flex flex-column position-static">
            <h3 class="mb-0">{{ post.header }}</h3>
            <div class="mb-1 text-muted">{{ post.date|date('d.m.Y') }}</div>
            <p class="card-text mb-auto">{{ post.annotation }}</p>
            <a href="{{ path('post', {id: post.id} ) }}">Продолжить чтение</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <a href="{{ path('postUpdate', {id: post.id} ) }}">Редактировать новость</a>
            {% endif %}
          </div>
          <div class="col-auto d-none d-lg-block">
            <img src="{{ asset('/uploads/img/' ~ post.img) }}" width="600" height="400">
            {# <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" role="img" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> #}
          </div>
      </div>
    {% endfor %}

  {% if maxPages > 1 %}
  <ul class="pagination pagination-sm">
      {# `«` arrow  #}
      <li {{ thisPage == 1 ? 'class="disabled"' }}>
          <a href="{{ path('posts', {page: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
      </li>

      {# Render each page number #}
      {% for i in 1.. maxPages %}
      <li {{ thisPage == i ? 'class="active"' }}>
      <a href="{{ path('posts', {page: i}) }}">{{ i }}</a>
      </li>
      {% endfor %}

      {# `»` arrow #}
      <li {{ thisPage == maxPages ? 'class="disabled"' }}>
          <a href="{{ path('posts', {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
      </li>
  </ul>
  {% endif %}

    </div>
{% endblock %}

